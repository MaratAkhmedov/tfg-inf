<!DOCTYPE html>
<html>
	<head>
		<!-- Essential metadata for encoding and responsive design -->
		<meta charset="UTF-8">
		<metaname="viewport" content="width=device-width, initial-scale=1">

		<!-- Page title, which can be overridden in different views -->
		<title>
			{% block title %}{% endblock %}
		</title>

		<!-- Custom favicon using inline SVG -->
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

		<!-- Styles -->
		<link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"> 
		<style>
			.gm-style iframe + div {
				border: none !important;
			}
		</style>

		<!-- jQuery from CDN -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
		<script>
			$(document).ready(function () {
				// Script to handle dropdown submenus
				$('.dropdown-submenu a.dropdown').on("click", function (e) {
					$(this).next('ul').toggle();	// Toggles the visibility of the next ul element
					e.stopPropagation();			// Prevents the event from propagating
					e.preventDefault();				// Prevents the default behavior of the link
				});
			});
		</script>

		<!-- Placeholder for additional styles specific to each view -->
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		<!-- Placeholder for the main content of each view -->
		{% block body %}{% endblock %}

		<!-- parse-ignore-start -->
		
		<!-- Load Javascrypt files -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
		<script src="{{ asset('js/router.min.js') }}"></script>
		<script src="{{ asset('js/fos_js_routes.js') }}"></script>

		<!-- Placeholder for additional scripts specific to each view -->
		{% block javascript %}{% endblock %}
	</body>
</html>
